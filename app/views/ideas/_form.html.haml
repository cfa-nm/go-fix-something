= simple_form_for @idea || Idea.new do |f|
  = f.error_notification

  .inputs
    = f.input :text, as: :text, label: false, input_html: { rows: 6, style: "height:auto" }
    = f.hidden_field :user_id, value: user_signed_in? ? current_user.id : nil

  .actions
    = f.submit "Okay then, let's get started!", class: %w[button expand]
